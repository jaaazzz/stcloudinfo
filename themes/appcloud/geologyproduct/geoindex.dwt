<script type="text/javascript">
	$(function(){
		setInterval(newsChange,1000);
		// $('.datePicker').date_input();
	})
	function changeMap(){
		var select_val = $('#mapSelect option:selected').val();
		$('.map-show img').attr('src','themes/appcloud/images/geoimgs/'+select_val+".png");
	}
	function newsChange(){
		// $('.news-items');
		var firstNews = $('.news-items .news-item').get(0);
		$(firstNews).animate({marginTop:'-37px'},500,'linear',function(){
			$('.news-items').append("<div class='news-item'>"+firstNews.innerHTML+"</div>");
			$(this).css('margin-top',0).remove();
		});
		

	}
</script>
