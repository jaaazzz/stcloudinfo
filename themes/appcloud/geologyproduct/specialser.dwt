        width: 100%;
        text-align: center;
    }
    .right-content-main img
    {
        height: 608px;
    }
</style>
<body>
<div class="space-time-cloud-home">
<!-- 引入Header开始 -->
    <!-- #BeginLibraryItem "/library/header_new.lbi" --><!-- #EndLibraryItem -->
<!-- 引入Header结束 -->
    <script type="text/javascript">
        $(function(){
           var tree_data=[
               {
                   text:'科普文章',
                   img:'themes/appcloud/images/geoimgs/ff1.png',
                   children:[
                   ]
               },
               {
                   text:'地质百科',
                   img:'themes/appcloud/images/geoimgs/ff3.png',
                   children:[
                   ]
               },
               {
                   text:'趣味园地',
                   img:'themes/appcloud/images/geoimgs/ff2.png',
                   children:[
                   ]
               },
               {
                   text:'科普多媒体',
                   img:'themes/appcloud/images/geoimgs/ff1.png',
                   children:[
                   ]
               }
           ];
            init_tree(tree_data);

        });
        function init_tree(data){
            //构造树
            var html='';
            for(var i=0;i<data.length;i++){
                var child_html='';
                for(var j=0;j<data[i].children.length;j++){
                    child_html+='<div class="child-node node" img="'+data[i].children[j].img+'">'+data[i].children[j].text+'</div>';
                }
                html+='<div class="tree-parent">'+
                        '<div class="parent" img="'+data[i].img+'"><img src="themes/appcloud/images/geoimgs/leixing.png" style="margin-right: 4px;">'+data[i].text+'</div>'+
                        '<div class="children">'+child_html+'</div>'+
                       '</div>';
            }
            $(".tree-area").html(html);
            //绑定结点事件
            $(".tree-parent .parent").click(function(e){
                $(this).addClass('active');
                var img=$(this).attr('img');
                if(img){
                    $(".right-content-main img").attr('src',img);
                }
                if($(this).parent().hasClass('open')){
                    return false;
                }
                if(!$(this).parent().find('.child-node').length){
                    return false;
                }
                $(".tree-parent.open .children").slideUp();
                $(".tree-parent.open").removeClass('open');
                $(this).parent().addClass('open');
                $(this).parent().find('.children').slideDown();
            });
            $(".child-node").click(function(){
                $(".child-node.active").removeClass('active');
                $(this).addClass('active');
                var img=$(this).attr('img');
                if(img){
                    $(".right-content-main img").attr('src',img);
                }
            });
        }
    </script>
    <div class="content-con">
        <!--于广庆html begin-->
        <div class="left_tree" style="min-height: 667px;">
            <div class="top-info">
                <img src="themes/appcloud/images/geoimgs/mulu.png" style="margin-right: 10px;">科普目录
            </div>
            <div class="tree-area">
            </div>
        </div>
        <!--于广庆html end-->
		<div class="right-content">
	        <div class="right-content-nav">
	            <div class="nav-info">
	                <input tpye="text" placeholder="关键字">
	                <select>
	                    <option>作者</option>
	                </select>
	                <select>
	                    <option>发表时间</option>
	                </select>
	                <input type="button" value="检索">
	            </div>
	            <div class="right-content-main">
		            <img src="themes/appcloud/images/geoimgs/ff1.png">
		        </div>
		    </div>
		</div>
	    <div style="clear: both;height: 60px;"></div>

    </div>
