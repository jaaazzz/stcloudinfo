//单击缩小按钮功能
function small() {
    clearStatus();
    var view= map.getView();
    var zoom= view.getZoom();
    //获取地图视图
    //获得当前缩放级数
    
    //地图缩小一级
    view.setZoom(zoom - 1);
};

//单击放大按钮功能
function big() {
    clearStatus();
    var view= map.getView();
    var zoom= view.getZoom();
    view.setZoom(zoom + 1);
    //地图放大一级
};


//复位功能（复位到初始状态）
function restore() {
    clearStatus();
    var view= map.getView();
    var zoom= view.getZoom();
    //初始中心点
    view.setCenter(center);
    //初始旋转角度
    view.setRotation(rotation);
    //初始缩放级数
    view.setZoom(zoom);

};

//清除功能
function clearMap(){
    clearStatus();
    removeMaker();
    removeMeasure();
};

