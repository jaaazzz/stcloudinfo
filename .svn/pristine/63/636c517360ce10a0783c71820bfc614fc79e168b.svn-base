$("#close").click(function () {
    popup.setPosition(undefined);
});

function clickpopup(evt) {
    //鼠标单击点坐标
    var point = evt.coordinate;
    feature = map.forEachFeatureAtPixel(evt.pixel, function (feature, layer) { return feature; });
    if (feature) {
        flag = true;
        if (popup.getPosition() == undefined) {
            //设置popup的位置
            popup.setPosition(point);
            document.getElementById("name").value = feature.name;
            document.getElementById("infoPointContent").value = feature.info;
        }
    } else { //添加一个新的标注（矢量要素）
        flag = false;
        addVectorLabel(point);
        popup.setPosition(point);
    }
}

function createLabelTextStyle(feature) {
    return new ol.style.Style({
        /**{olx.style.IconOptions}类型*/
        image: new ol.style.Icon(
            ({
                //设置图标点
                anchor: [0.6, 25],
                //图标起点
                anchorOrigin: 'top-right',
                //指定x值为图标点的x值
                anchorXUnits: 'fraction',
                //指定Y值为像素的值
                anchorYUnits: 'pixels',
                //偏移
                offsetOrigin: 'top-right',
                // offset:[0,10],
                //图标缩放比例
                //scale: 0.5,
                //透明度
                opacity: 1,
                //图标的url
                src: src
            })
        ),
        text: new ol.style.Text({
            //位置
            textAlign: 'center',
            //基准线
            textBaseline: 'middle',
            //文字样式
            font: 'normal 16px 微软雅黑',
            //文本内容
            text: value,
            //文本填充样式（即文字颜色）
            fill: new ol.style.Fill({ color: 'black' }),
            offsetX: 30,
            offsetY: -13
        })
    });
}

function addVectorLabel(coordinate) {
    value = '';
    src = 'themes/appcloud/onlinesrc/images/交通.png';
    //新建一个要素 ol.Feature
    data.newFeature = new ol.Feature({
        //几何信息
        geometry: new ol.geom.Point(coordinate)
    });
    //设置要素的样式
    document.getElementById("name").value = null;
    document.getElementById("infoPointContent").value = null;
    data.newFeature.setStyle(createLabelTextStyle(data.newFeature));
    //将新要素添加到数据源中
    data.vectorSource.addFeature(data.newFeature);
}

