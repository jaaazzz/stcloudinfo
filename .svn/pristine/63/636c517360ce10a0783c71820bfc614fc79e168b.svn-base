function Addmarker() {
    $('#popup').show();
    removeMeasure();
    if (!data.vectorLayer) {
        data.vectorLayer = new ol.layer.Vector({
            source: data.vectorSource
        });
        map.addLayer(data.vectorLayer);
    }
    map.on('click', clickpopup);
}

function AddTextMaker() {
    value = '';
