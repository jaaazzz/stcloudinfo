
//全屏
function fullscreen(){
    if($('#swipe').attr('show')==1||$('#multi').attr('show')==1){
        $('.navbar-wrapper').toggle();
        if($('.navbar-wrapper').css('display')=='none'){
            $('#onlinesrc-content').css('height','100%');
            $('.aaa').attr('title','窗口');
        }else{
            $('.aaa').attr('title','全屏');
            $('#onlinesrc-content').css('height',$(window).height()-70+'px');
        }
    }else{
        $('#onlinesrc-content').css('height','100%');
        $('.navbar-wrapper').toggle();
        $('.left-box').toggle();
        if($('#mapCon').css('left') != "0px"){
           $('.operate-ul').hide();
           $('#mapCon').css('left','0px'); 
           $('#swipe').css('left','-100px');
           $('#multi').css('left','0px');
           $('#multi').css('width','100%');
           $('#map1').css('width','50%');
           $('#map2').css('width','50%');
           $('.aaa').attr('title','窗口');
           $('#mapCon').css({
                width:'100%'
            })
        }
        else{
            $('#onlinesrc-content').css('height',$(window).height()-70+'px');
           $('.operate-ul').show();
           $('#mapCon').css('left','320px');
           $('#swipe').css('left','220px');
           $('#multi').css('left','320px');
           $('#multi').css('width','auto');
           $('#map1').css('width','550px');
           $('#map2').css('width','550px');
           $('.aaa').attr('title','全屏');
           $('#mapCon').css({
                width:$(window).width()-320+'px'
            })
        }
    }
    
};






