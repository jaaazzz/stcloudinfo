        }
        .changeposition{
            position: relative;
            top: 0;
            width:1169px;
        }
        .select >a:hover{
            text-decoration: underline;
        }
        .select a{
            color: #6389de;
            font-size: 14px;
        }
        .select{
            width: 1170px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 25px;
            margin-bottom: 5px;
            height: 20px;
            font-size: 0px;
        }
        .message-not-exists-container div ul li{
            font-size: 14px;
            color: #333;
        }
        .select div:hover{
            cursor: pointer;
        }
        .page-area li{
            display: inline-block;
            border: 1px solid #dcdcdc;
            border-right: 0px;
            height: 32px;
            text-align: center;
            font-size: 14px;
            vertical-align: center;
        }
        .page-area li div{
            height: 33px;
            line-height: 34px;
        }
        .page-area li div:hover{
            background-color: #428bca;
            color: #fff;
            cursor: pointer;
        }
        .message-exists-container div ul li{
            display: inline-block;
        }
        .delete_btn:hover{
            cursor: pointer;
        }
        .message-footer ul li p:hover{
            cursor: default;
        }
        .message-container-option div:hover{
            background-color: #ececec;
        }
    </style>
</head>

<body>

    <!-- #BeginLibraryItem "/library/header.lbi" --><!-- #EndLibraryItem -->
