        controls: ol.control.defaults({
            attribution: false
        }),
        target: 'map2',
        layers: [layer1, layer2],
        view: view
    });
    multi.hide();
}

Multidate.changeMapDouble=function (mapType, type) {
    var map = null;
    if (mapType == 'map1') {
        map = map1;
    } else {
        map = map2;
    }
    if (type == 'vec') {
        map.removeLayer(layer3);
        map.removeLayer(layer4);
        map.addLayer(layer1);
        map.addLayer(layer2);
    } else {
        map.removeLayer(layer1);
        map.removeLayer(layer2);
        map.addLayer(layer3);
        map.addLayer(layer4);
    }
}
//图层切换函数
Multidate.changeLayer=function (mapType) {
    var map = null;
    if (mapType == 'map1') {
        map = map1;
        var index = $("#LayerSelect1").val() - 1;
    } else {
        map = map2;
        var index = $("#LayerSelect2").val() - 1;
    }
    var Layers = map1.getLayers().getArray();;
    //移除图层
    for (var i = 0; i < Layers.length; i++) {
        map.removeLayer(Layers[i]);
    }
    //添加图层
    map.addLayer(LayerArr[index]);
    map.addLayer(LayerArr[index + 1]);
}