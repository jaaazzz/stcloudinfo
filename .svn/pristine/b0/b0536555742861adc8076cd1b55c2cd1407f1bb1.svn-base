    });
    var TileName2 = "武汉矢量";
    layer2 = new Zondy.Map.TileLayer(TileName2, TileName2, {
        ip: "192.168.83.72",
        port: "6163"
    });
    var TileName3 = "武汉矢量";
    layer3 = new Zondy.Map.TileLayer(TileName3, TileName3, {
        ip: "192.168.83.72",
        port: "6163"
    });
    var TileName4 = "武汉影像";
    layer4 = new Zondy.Map.TileLayer(TileName4, TileName4, {
