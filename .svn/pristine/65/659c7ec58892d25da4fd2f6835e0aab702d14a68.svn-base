.content
{
    width: 1170px;
    margin: auto;
    min-height: 600px;
}
.trade-select {
  border: 1px solid #dcdcdc;
  margin-top: -60px;
  background:#fff;
  /*margin-bottom:20px;*/
  margin-bottom:8px;
}
.trade-field{
  line-height: 25px;
  font-size: 14px;
  color: #666666;
    height:48px;
    line-height: 48px;

}
.trade-field .field{
  cursor: pointer;
  padding: 0px;
  line-height: 36px;
  font-size: 14px;
  color: #666666;
  font-family: "Microsoft YaHei", "微软雅黑";
  display: inline-block;
  margin-right: 20px;
}
.trade-field .field.select{
  font-size: 14px;
  /*border-bottom: 2px solid #3F8ccd;*/
  display: inline-block;
  color:#4bb0e5;
}
.app-bl{
    display:none;
    color:#fff;
}
.app-one
{
    width: 224px;
    border: 1px solid #cdcdcd;
    /*text-align: center;*/
    float: left;
    margin-top: 8px;
    background: #fff;
    margin-right: 60px;
    margin-bottom: 16px;
    padding-top:2px;
    position:relative;
    -webkit-box-shadow:0px 4px 4px rgba(7,17,27,0.1);
    -moz-box-shadow:0px 4px 4px rgba(7,17,27,0.1);
    -ms-box-shadow:0px 4px 4px rgba(7,17,27,0.1);
    box-shadow:0px 4px 4px rgba(7,17,27,0.1);
}
.app-one:hover
{
  -webkit-box-shadow: 0px 5px 20px rgba(75,176,229,0.3);
  -moz-box-shadow: 0px 5px 20px rgba(75,176,229,0.3);
  -ms-box-shadow: 0px 5px 20px rgba(75,176,229,0.3);
  box-shadow: 0px 5px 20px rgba(75,176,229,0.3);
}
.app-one-img:hover .app-bl{
    display:block;

}
.app-one-img:hover .app-bl div:nth-child(2){
    color:#fff;
    background:#6389de;
    border:1px solid #fff;
}
.app-one-img:hover .app-bl div:nth-child(2):hover{
    color:#6389de;
    background:#fff;
}
.app-one-img
{
    width: 200px;
    height: 160px;
    margin: auto;
    margin-top: 0px;
/*    border: 1px solid #AEAEAE;*/
}
.app-one-img img
{
    width: 100%;
    height: 180px;
}
.app-name
{
    height: 26px;
    line-height: 26px;
    font-size: 22px;
    width: 100%;
    margin: auto;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    text-align: left;
    margin-top: 24px;
}
.app-name a
{
  color: #333333;
  text-decoration:none;
  font-size: 22px;

}
.app-name a:hover
{
  text-decoration:underline;
  color:#4bb0e5;
}
.app-opr
{
    height: 36px;
    /*text-align: center;*/
    line-height: 36px;
    margin-top:32px;
}
.app-opr a
{
    display: inline-block;
    text-align: center;
}
.app-opr .collection
{
    float: left;
    /*display: inline-block;*/
    margin-left: 24px;
    margin-top: 20px;
    color: #656565;
}
.no-collection
{
  float: left;
  margin-left: 10px;
  display: inline-block;
  height:23px;
  margin-top: 8px;
}
.app-opr .online-use
{
    height: 25px;
    border: 1px solid #3dac69;
    background-color: #3dac69;
    color: #ffffff;
    width: 78px;
    border-radius: 5px;
    line-height: 25px;
    float: left;
    margin-left: 10px;
    margin-top: 5px;
    display:none;
/*    margin-right:60px;*/
/*    float: right;*/
}
.pagination ul>li>a
{
  margin-left: 3px;
}
.pagination ul>li>a, .pagination ul>li>span
{
  border-left-width: 1px;
}
.pagination ul>li>a:hover, .pagination ul>.active>a, .pagination ul>.active>span {
  background-color: #3A85C6;
  color: #fff;
  border: 1px solid #3A85C6;
}
.pagination ul>.disabled>a:hover
{
  border: 1px solid #ddd;
}
.no_product_img_text
{
  position: absolute;
  z-index: 1;
  margin-top: 120px;
  margin-left: 160px;
  text-align: left;
  line-height: 30px;
}