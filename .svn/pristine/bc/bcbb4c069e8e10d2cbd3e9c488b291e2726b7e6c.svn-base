.bill-body{
	margin-top: 20px;
}
.bill-list{
	min-height: 600px;
}

.bill-list .list-title{
	height: 43px;
	border-bottom: 1px solid #dcdcdc;
	background-color: #f2f5fa;
	border-top: 1px solid #dcdcdc;
	margin-top: 15px;
}

.bill-list .list-title, .bill-list .list-content{
	list-style: none;
	border-left: 1px solid #dcdcdc;
	border-right: 1px solid #dcdcdc;
	border-bottom: 1px solid #dcdcdc;
}

.bill-list .list-title > li{
	text-align: center;
	height: 43px;
	line-height: 43px;
	font-size: 14px;
	float: left;
/*	border-left: 1px solid #d5d5d5;*/
}

.bill-list .list-title li.s1,.bill-list .list-content .order-ul .order-li ul li.s1{
	width: 15%;
	border: none;
}

.bill-list .list-title li.s2,.bill-list .list-content .order-ul .order-li ul li.s2{
	width: 35%;
}

.bill-list .list-title li.s3,.bill-list .list-content .order-ul .order-li ul li.s3{
	width: 20%;
}

.bill-list .list-title li.s4,.bill-list .list-content .order-ul .order-li ul li.s4{
	width: 13%;
}

.bill-list .list-title li.s5,.bill-list .list-content .order-ul .order-li ul li.s5{
	width: 16%;
}

.bill-list .list-content .order-ul{
	position: relative;
}

.bill-list .list-content .order-ul .order-li{
/*	border-bottom: 1px solid #d5d5d5;*/
/*	height: 40px;*/
	float: left;
	width: 100%;
	cursor: pointer;
}

.bill-list .list-content .li-backgroud{
	background: #f5f5f5;
}

.bill-list .list-content .order-ul .order-li ul li{
	text-align: center;
/*	height: 40px;*/
	line-height: 40px;
	font-size: 12px;
	float: left;
/*	border-left: 1px solid #d5d5d5;*/
}

.bill-list .list-content .order-ul .order-li ul li.s2 a{
	color: #29c;
	display: inline-block;
	float: right;
	margin-right: 10px;
/*	line-height: 69px;*/
}

.bill-list .list-content .order-ul .order-info{
	float: left;
	display: none;
	width: 100%;
}

.bill-list .list-content .order-ul .order-info .pluglist{
	border-top: 1px solid #dcdcdc;
	background: #ffffff;
}

.bill-list .list-content .order-ul .order-info .pluglist .plug{
	width: 100%;
}

.bill-list .list-content .order-ul .order-info .pluglist .plug > div{
	float: left;
}

.bill-list .list-content .order-ul .order-info .pluglist span.plug{
	display: block;
	width: 100%;
	height: 35px;
/*	border-bottom: 1px dashed #d5d5d5;*/
	line-height: 35px;
	font-size: 12px;
	color: #666666;
}

.bill-list .list-content .order-ul .order-info .pluglist span.plug .plug-name{
	display: inline-block;
	width: 630px;
	text-align: center;
}

.bill-list .list-content .order-ul .order-info .pluglist span.plug .plug-price{
	display: inline-block;
	margin-left: 247px;
	width: 100px;
	text-align: center;
}

.trangle {
    font-family: SimSun; 
}

.trangle em, .trangle span {
    font-style: normal;
    display: block;
    width: 30px;
    height: 16px;
    font-size: 20px;
    overflow: hidden;
    position: absolute;
    z-index: 10000;
    left: 263px; 
}

.trangle em{
	margin-top: -9px;
    color: #d5d5d5;
}

.trangle span{
	margin-top: -8px;
	color: #ffffff;
	border: none;
}

a.review_verify{
	margin-left: 20px;
	font-size: 12px;
	color: #08c !important;
}

#verify-msg .msg-content{
	min-height: 60px;
	text-align: center;
	margin-top: 10px;
}