.collection-body{
  min-height: 600px;
  margin-top: 15px;
}

.collection-body .collection-item{
  width: 224px;
  border: 1px solid #dcdcdc;
  margin-left: 24px;
  margin-bottom: 15px;
  /*height: 253px;*/
}

.collection-body .collection-item:hover{
	-webkit-box-shadow: 0px 0px 3px 3px #ececec;
	-moz-box-shadow: 0px 0px 3px 3px #ececec;
	box-shadow: 0px 0px 3px 3px #ececec;
}

.collection-body .collection-item .collection-img{
	position: relative;
}

.app-bl{
    display: none;
    color:#fff;
}
.collection-img:hover .app-bl{
    display: block;
}
.collection-img:hover .app-bl a div{
    color:#fff;
    background:#6389de;
    border:1px solid #fff;
}
.collection-img:hover .app-bl a div:hover{
    color:#6389de;
    background:#fff;
    border:1px solid #fff;
}
.collection-body .collection-item.first-child{
	margin-left: 0px;
}
.collection-body .collection-item .collection-img
{
    border-bottom: 1px solid #eee;
    width: 100%;
    height: 170px;
    /*overflow: hidden;*/
}
.collection-body .collection-item img{
	width: 100%;
	height: 100%;
}

.collection-body .collection-item .name{
	line-height: 20px;
	text-align: center;
}

.collection-body .collection-item .op-btn{
	position: relative;
	margin-bottom: 5px;
}

.collection-body .collection-item .op-btn #collection{
	/*float: right;*/
	margin-left: 5px;
	margin-top: 6px;
}

.collection-body .collection-item .collection-name{
    font-size: 14px;
    /* margin-bottom: 15px; */
    /* margin-top: 15px; */
    display: inline-block;
    width: 98%;
    white-space: nowrap;
    margin: 5px 0 5px 5px;
}

.collection-name a:hover{
	text-decoration:underline;
    color:#4bb0e5;
}

#online-use .btn-zondy{
	width: 70px;
	font-size: 12px;
	height: 28px;
	margin-left: 5px;
}

.collection-backdrop{
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: #000;
	opacity: 0.6;
	filter: alpha(opacity=60);
	color: #fff;
	font-size: 18px;
	text-align: center;
	line-height: 180px;
}

.collection-count{
	font-size: 12px;
	color: #666666;
	margin-bottom: 20px;
}
.pagination ul>li>a
{
  margin-left: 3px;
}
.pagination ul>li>a, .pagination ul>li>span
{
  border-left-width: 1px;
}
.pagination ul>li>a:hover, .pagination ul>.active>a, .pagination ul>.active>span {
  background-color: #3A85C6;
  color: #fff;
  border: 1px solid #3A85C6;
}
.pagination ul>.disabled>a:hover
{
  border: 1px solid #ddd;
}

.resource-content:first-child{
	border-top:none;
}

.resource-content{
	margin-top: 20px;
	border-top: 1px solid #dcdcdc;
	padding-top: 10px;
}

.resource-content .content-img img{
	width: 150px;
	height: 120px;
}


.resource-content .content-body .content-body-title{
	font-weight: normal;
	font-size: 14px;
	color: #333333;
	margin-bottom: 15px;
}

.resource-content .content-body .content-body-substance{
	font-size: 12px;
	color: #666666;
	min-height: 85px;
	width: 755px;
}

.resource-content .content-body{
	margin-left: 20px;
	position: relative;
	height: 180px;
}

.resource-content .content-body .content-body-btn a.p-btn{
	width: 80px;
	height: 30px;
	text-align: center;
	line-height: 30px;
	background: rgba(153, 102, 153, 0.8);
	color: #ffffff;
	border-radius: 3px;
	-webkit-border-radius: 3px;
    -moz-border-radius: 3px;
}

.resource-content .content-body .content-body-btn a.no-collection ,.resource-content .content-body .content-body-btn a.collection{
	margin-left: 30px;
	vertical-align: middle;
}